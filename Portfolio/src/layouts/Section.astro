---
interface Props {
  className?: string;
  header?: string;
}

const { className, header } = Astro.props;

const id = header?.toLowerCase();
---

<section class={`w-full px-4 md:px-8 ${className}`}>
  <div class="max-w-5xl mx-auto">
    {
      header && (
        <div class="flex items-center w-full">
          <h3 id={id} class="text-3xl px-4 mb-1 text-secondary">
            {header}
          </h3>
          <hr class="my-8 w-52 md:w-72 h-0.5 border-0 bg-primary" />
        </div>
      )
    }

    <slot />
  </div>
</section>
