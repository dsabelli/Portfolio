---
interface Props {
  className: string;
  header?: string;
}

const { className, header } = Astro.props;

const id = header?.toLowerCase();
---

<section class={`w-full px-4 md:px-0 py-8 ${className}`}>
  <div class="max-w-3xl mx-auto">
    <h3 id={id} class="text-3xl px-4">{header}</h3>
    <slot />
  </div>
</section>
