---
import Layout from "../layouts/Layout.astro";
import Section from "../layouts/Section.astro";
import Navbar from "../components/Navbar.astro";
import About from "../components/About.astro";
import Project from "../components/Project";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import Landing from "../components/Landing.astro";
import Weatheready from "../../public/Icons/Weatheready";
import Todidit from "../../public/Icons/Todidit";
import "swiper/css";
import "swiper/css/pagination";
import "swiper/css/mousewheel";
import Rpgoracles from "../../public/Icons/Rpgoracles";
---

<Layout title="Dan Sabelli.">
  <Navbar />
  <Section><Landing /></Section>
  <main>
    <Section header="About" className="mb-24 md:mb-32"><About /></Section>
    <Section header="Projects" className="mb-24 md:mb-32">
      <Project
        client:only
        title="RPG Oracles"
        description="RPG Oracles is an online platform for dungeon masters and storytellers who are looking for inspiration and guidance in their tabletop role-playing game (RPG) campaigns. "
        tech={[
          "TypeScript",
          "Vue",
          "Nuxt",
          "Pinia",
          "Node.js",
          "PostgreSQL",
          "Prisma",
          "API",
          "Tailwind",
          "Vitest",
        ]}
        webLink="https://www.rpgoracles.com"
        githubLink="https://github.com/dsabelli/rpgoracles"
        images={[
          "photos/RPGOracles-landing.gif",
          "photos/RPGOracles-cards.png",
          "photos/RPGOracles-tables.png",
        ]}
        mobileImages={[
          "photos/RPGOracles-landing-mobile.gif",
          "photos/RPGOracles-cards-mobile.png",
          "photos/RPGOracles-tables-mobile.png",
        ]}
        altText={["text1", "text2", "text3"]}
        position="left"
        ><Rpgoracles width="60" />
      </Project>

      <Project
        client:only
        title="Weather Ready"
        description="Weather Ready is a weather forecast and clothing recommendation web application that provides users with clothing recommendations based on the weather in their current or searched for location."
        tech={["TypeScript", "React", "Redux", "API", "Tailwind", "Cypress"]}
        webLink="https://www.weatheready.com"
        githubLink="https://github.com/dsabelli/weatheready"
        images={[
          "photos/Weatheready-landing.png",
          "photos/Weatheready-8-day.png",
          "photos/Weatheready-today.png",
        ]}
        mobileImages={[
          "photos/Weatheready-landing-mobile.png",
          "photos/Weatheready-8-day-mobile.png",
          "photos/Weatheready-today-mobile.png",
        ]}
        altText={["text1", "text2", "text3"]}
        position="right"
        ><Weatheready width="48" />
      </Project>

      <Project
        client:only
        title="toDidit"
        description="A responsive MERN stack productivity application with full CRUD, authentication, registration and email verification, validation, data archiving and lookup features."
        tech={[
          "React",
          "Node.js",
          "Express",
          "MongoDB",
          "API",
          "Tailwind",
          "JWT",
          "Jest",
        ]}
        webLink="https://www.todidit.com"
        githubLink="https://github.com/dsabelli/todidit"
        images={[
          "photos/Todidit-landing.png",
          "photos/Todidit-todo.png",
          "photos/Todidit-time-machine.png",
        ]}
        mobileImages={[
          "photos/Todidit-landing-mobile.png",
          "photos/Todidit-todo-mobile.png",
          "photos/Todidit-time-machine-mobile.png",
        ]}
        altText={["text1", "text2", "text3"]}
        position="left"
        ><Todidit width="48" />
      </Project>
    </Section>
  </main>
  <Section header="Contact" className="mb-4">
    <Contact />
  </Section>
  <Footer />
</Layout>
